                    ],
                    "iDisplayLength": 100,
                    "searchDelay": 2000,
                    "sPaginationType": "bootstrap",
                    "sDom": "Tflt<'row DTTTFooter'<'col-sm-6'i><'col-sm-6'p>>",
                    "oTableTools": {
