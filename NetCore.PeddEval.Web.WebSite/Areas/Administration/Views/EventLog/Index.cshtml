    <script>
    var InitiateExpandableDataTable = function () {
        return {
            init: function () {
                /*
                * Initialize DataTables, with no sorting on the 'details' column
                */
                var oTable = $('#expandabledatatable').dataTable({
                    "processing": true,
                    "serverSide": true,
                    "aLengthMenu": [
                           [5, 15, 50, 100, 200, 500],
