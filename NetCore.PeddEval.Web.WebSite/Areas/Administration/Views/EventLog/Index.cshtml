                            "sNext": "Siguiente"
                        }
                    },
                    "aaSorting": [6, 'desc'],
                    'fnCreatedRow': function (nRow, aData, iDataIndex) {
                        $(nRow).attr('id', (aData[0]));
                    },
                    'columnDefs': [{
                        'targets': 0,
                        'searchable': false,
                        'orderable': false,
                        'render': function (data, type, full, meta) {
                            return '<i class="fa fa-plus-square-o row-details"></i>';
                        }
                    },
                    {
